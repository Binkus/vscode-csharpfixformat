{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "removeComments": true,
        "strictNullChecks": true,
        "allowJs": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ]
}